{% extends 'base-dashboard.html.twig' %}

{% block subtitle %}Accueil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('back') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('back') }}
    {{ encore_entry_script_tags('dashboard') }}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-7">
            {{ form_start(newPostForm) }}
            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(newPostForm.content) }}
                </div>
                <div class="col-md-1 offset-md-11">
                    <small class="text-muted"><span id="length">0</span>/100</small>
                </div>
            </div>
            <div class="row mt-3">
                {{ form_row(newPostForm.submit) }}
            </div>
            {{ form_end(newPostForm) }}
            <hr style="border: 1px solid whitesmoke;">
            {% for post in posts %}
                <div class="row card mb-2">
                    <div class="card-body">
                        <h4>{{ post.user.firstname|capitalize }} {{ post.user.lastname|upper }}</h4>
                        <h6>Posté le {{ post.createdAt|format_datetime(locale='fr', pattern="dd LLLL r à HH:mm") }}</h6>
                        <div class="content">
                            {{ post.content }}
                        </div>
                        <hr>
                        <h6>Ajouter un commentaire</h6>
                        <form method="post">

                            <div class="input-group">
                                <textarea name="" id="" cols="20" rows="1" class="form-control"></textarea>
                                <div class="input-group-append">
                                    <input type="submit" value="Publier" class="btn btn-secondary">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-3 offset-md-2">
            <div class="row">
                {% for event in events %}
                    <div class="col-md-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <p>{{ event.name }}</p>
                                <hr style="border: 1px solid whitesmoke;">
                                <p>Commence dans X</p>
                                <p>{{ event.location }}</p>
                                <p>{% if event.nbParticipants - event.participants|length > 0 %} {{ event.nbParticipants - event.participants|length }} places restantes {% else %}
                                        <b>Complet</b> {% endif %}</p>
                                {% if event.nbParticipants - event.participants|length > 0 %}
                                    <p>{% if event.price %} {{ event.price }} € {% else %}Gratuit{% endif %}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>


{% endblock %}
