{% extends 'base.html.twig' %}

{% block subtitle %}Evenements actuel{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('front') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('front') }}
    {{ parent() }}
{% endblock %}

{% block body %}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Date de d√©but</th>
            <th>Date de fin</th>
            <th>Statistiques</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.datestart|date('d/m/Y') }}</td>
                <td>{{ event.dateEnd|date('d/m/Y') }}</td>
                <td><a href="{{ path('event_stats', {'id': event.id}) }}"class="btn btn-outline-primary">Consulter</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
